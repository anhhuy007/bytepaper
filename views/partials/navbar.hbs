{{!-- views/partials/navbar.hbs --}}
<div class="drawer w-fit">
  <input id="my-drawer" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content space-x-4">
    <label for="my-drawer" class="btn btn-ghost btn-square drawer-button"> {{> icons/menu}}</label>
  </div>
  <div class="drawer-side z-50">
    <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"> </label>
    <div class="menu bg-base-100 text-base-content min-h-full w-80">
      <a href="/" class="flex items-center space-x-2 my-8 mx-auto btn btn-ghost">
        <img src="/assets/logo.png" alt="Paperly" class="h-8 w-8" />
        <span class="text-2xl font-bold text-orange-500">Paperly</span>
      </a>
      {{#each categories}}
      <div class="collapse collapse-arrow group rounded-none">
        <input type="checkbox" class="peer" />
        <div
          class="rounded-none collapse-title border-b-2 group-hover:bg-primary group-hover:text-primary-content text-xl font-bold p-4
             {{#if (or (eq (toNumber id) (toNumber ../currentCategoryId)) (hasSubCategorySelected children ../currentCategoryId))}}
                    border-l-orange-600 border-l-8
                {{/if}}"
        >
          {{ name }}
        </div>
        <div class="collapse-content p-0">
          <div class="flex flex-col w-full">
            <a href="/articles/categories/{{ id }}" class="w-full">
              <div
                class="pl-10 bg-base-100 w-full cursor-pointer p-4 hover:bg-primary hover:text-primary-content text-lg
            {{#if (eq (toNumber id) (toNumber ../currentCategoryId))}} 
              border-l-8 border-l-orange-400 font-bold
            {{/if}}"
              >
                {{ name }}
              </div>
            </a>

            {{#each children}}
            <a href="/articles/categories/{{ id }}" class="w-full">
              <div
                class="pl-10 bg-base-100 w-full cursor-pointer p-4 hover:bg-primary hover:text-primary-content text-lg
              {{#if (eq (toNumber id) (toNumber ../../currentCategoryId))}} 
                border-l-8 border-l-orange-400 text-lg font-bold
              {{/if}}"
              >
                {{ name }}
              </div>
            </a>
            {{/each}}
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
