{{!-- views/partials/header.hbs --}}
<header class="navbar bg-base-100 fixed top-0 z-50 shadow-md">
  <div class="navbar-start">
    {{!-- Sidebar toggle for mobile --}}
    <label for="sidebar-toggle" class="btn btn-ghost btn-square lg:hidden">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"
        />
      </svg>
    </label>
    <a href="/" class="btn btn-ghost normal-case text-xl">Paperly</a>
  </div>
  <div class="navbar-center hidden lg:flex">{{!-- Category Menu --}} {{> category-menu}}</div>
  <div class="navbar-end">
    {{!-- Search Bar --}}
    <form action="/search" method="GET" class="form-control">
      <div class="input-group">
        <input type="text" name="q" placeholder="Search..." class="input input-bordered" />
        <button type="submit" class="btn btn-square">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m0 0A7 7 0 1115 4a7 7 0 010 14z"
            />
          </svg>
        </button>
      </div>
    </form>
    {{!-- User Menu --}} {{#if user}}
    <div class="dropdown dropdown-end ml-2">
      <label tabindex="0" class="btn btn-ghost btn-circle avatar">
        <div class="w-10 rounded-full">
          <img src="{{user.avatarUrl}}" alt="User Avatar" />
        </div>
      </label>
      <ul
        tabindex="0"
        class="mt-3 p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-52"
      >
        <li><a href="/users/profile">Profile</a></li>
        <li><a href="/users/edit-profile">Settings</a></li>
        <li><a href="/auth/logout">Logout</a></li>
      </ul>
    </div>
    {{else}}
    <a href="/auth/login" class="btn btn-ghost">Login</a>
    <a href="/auth/register" class="btn btn-primary ml-2">Register</a>
    {{/if}}
  </div>
</header>

{{!-- Mobile Sidebar for Categories --}}
<input id="sidebar-toggle" type="checkbox" class="drawer-toggle" />
<div class="drawer-side lg:hidden">
  <label for="sidebar-toggle" class="drawer-overlay"></label>
  <ul class="menu p-4 w-64 bg-base-100">
    {{> category-menu}}
  </ul>
</div>
