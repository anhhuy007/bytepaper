{{!-- views/partials/pagination.hbs --}}
<nav class="flex justify-center mt-8">
  <ul class="pagination">
    {{!-- Previous Button --}}
    {{#compare currentPage '>' 1}}
    <li>
      <a
        href="{{#if query}}?page={{subtract currentPage 1}}&keyword={{query}}{{else}}?page={{subtract currentPage 1}}{{/if}}"
        class="btn btn-outline"
      >
        «
      </a>
    </li>
    {{/compare}}

    {{!-- Page Numbers --}}
    {{#each (paginationPages currentPage totalPages)}}
    <li>
      <a
        href="{{#if ../query}}?page={{this}}&keyword={{../query}}{{else}}?page={{this}}{{/if}}"
        class="btn {{#if (eq this ../currentPage)}}btn-active{{else}}btn-outline{{/if}}"
      >
        {{this}}
      </a>
    </li>
    {{/each}}

    {{!-- Next Button --}}
    {{#compare currentPage '<' totalPages}}
    <li>
      <a
        href="{{#if query}}?page={{add currentPage 1}}&keyword={{query}}{{else}}?page={{add currentPage 1}}{{/if}}"
        class="btn btn-outline"
      >
        »
      </a>
    </li>
    {{/compare}}
  </ul>
</nav>

