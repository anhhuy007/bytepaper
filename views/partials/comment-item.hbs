{{!-- views/partials/comment-item.hbs --}}
<div class="card bg-base-100 shadow-sm">
  <div class="card-body">
    <div class="flex items-center mb-2">
      <div class="avatar">
        <div class="w-8 rounded-full">
          <img src="{{default comment.avatarUrl ''}}" alt="{{comment.user_name}}" />
        </div>
      </div>
      <div class="ml-2">
        <p class="font-semibold">{{default comment.user_name 'Anonymous'}}</p>
        <p class="text-xs text-gray-500">{{formatDate comment.created_at}}</p>
      </div>
    </div>
    <p>{{comment.content}}</p>
  </div>
</div>
