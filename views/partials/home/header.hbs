<div class="navbar bg-base-100 border-b-2 px-4 py-4">
  <div class="navbar-start">
    <div class="drawer">
      <input id="my-drawer" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content">
        <label for="my-drawer" class="btn btn-ghost btn-square drawer-button">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h7"
            /></svg
        ></label>
      </div>
      <div class="drawer-side">
        <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"> </label>
        <div class="menu pt-10 bg-base-100 text-base-content min-h-full w-80">
          {{#each categories}}
          <div class="collapse collapse-arrow group rounded-none">
            <input type="checkbox" class="peer" />
            <div
              class="rounded-none collapse-title border-b-2 group-hover:bg-primary group-hover:text-primary-content text-xl font-bold p-4 
                
                {{#if (eq id ../currentCategoryId)}} 
                  border-l-8 border-l-red-600 
                {{else if (hasSubCategorySelected subCategories ../currentCategoryId)}} 
                  border-l-8 border-l-red-600 
                {{/if}}"
            >
              {{ category }}
            </div>
            <div class="collapse-content p-0">
              <div class="flex flex-col w-full">
                <a href="/categories/{{ id }}" class="w-full">
                  <div
                    class="pl-10 bg-base-100 w-full cursor-pointer p-4 hover:bg-primary hover:text-primary-content text-base {{#if (eq id ../currentCategoryId)}} border-l-8 border-l-black {{/if}}"
                  >
                    {{ category }}
                  </div>
                </a>
                {{#each subCategories}}
                <a href="/categories/{{ subId }}" class="w-full">
                  <div
                    class="pl-10 bg-base-100 w-full cursor-pointer p-4 hover:bg-primary hover:text-primary-content text-base {{#if (eq subId ../../currentCategoryId)}} border-l-8 border-l-black text-lg font-bold{{/if}}"
                  >
                    {{ name }}
                  </div>
                </a>
                {{/each}}
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
  <div class="navbar-center">
    <a class="btn btn-ghost text-xl" href="/">Paperly</a>
  </div>
  <div class="navbar-end">
    <div class="flex gap-6">
      <button class="btn btn-primary">Register</button>
      <button class="btn btn-ghost">Login</button>
    </div>
  </div>
</div>

<div class="navbar bg-base-100 border-b-2">
  <div class="navbar-start"></div>
  <div class="navbar-center">
    <div class="flex flex-col">
      <div class="flex gap-4 justify-center items-center">
        {{#each categories}}
        <a
          href="/categories/{{ id }}"
          class="btn btn-ghost text-lg font-bold {{#if (or (eq id ../currentCategoryId) (hasSubCategorySelected subCategories ../currentCategoryId))}} border-b-4 border-b-black {{/if}}"
        >
          {{ category }}
        </a>
        {{/each}}
      </div>

      {{#each categories}}
      {{#if (or (eq id ../currentCategoryId) (hasSubCategorySelected subCategories ../currentCategoryId))}}
      <div class="flex gap-4 justify-center items-center">
        {{#each subCategories}}
        <a
          href="/categories/{{ subId }}"
          class="btn btn-ghost text-base font-medium {{#if (eq subId ../../currentCategoryId)}} border-b-2 border-b-red-500 {{/if}}"
        >
          {{ name }}
        </a>
        {{/each}}
      </div>
      {{/if}}
      {{/each}}
    </div>
  </div>

  <div class="navbar-end"></div>
</div>
