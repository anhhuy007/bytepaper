<div class="navbar bg-base-100 border-b-2 px-4 py-4">
  <div class="navbar-start gap-8 ">
      {{> home/navbar}}
     <div class="grow max-w-[300px] items-start">
        <label class="input input-bordered flex items-center gap-2">
          <input type="text" class="grow" placeholder="Search" />
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 16 16"
            fill="currentColor"
            class="h-4 w-4 opacity-70">
            <path
              fill-rule="evenodd"
              d="M9.965 11.026a5 5 0 1 1 1.06-1.06l2.755 2.754a.75.75 0 1 1-1.06 1.06l-2.755-2.754ZM10.5 7a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Z"
              clip-rule="evenodd" />
          </svg>
        </label>
      </div>
  </div>
  <div class="navbar-center">
    <a class="btn btn-outline text-xl bg-black text-white" href="/">Paperly</a>
  </div>
  <div class="navbar-end">
    <div class="flex gap-6">
      <button class="btn btn-primary">Register</button>
      <button class="btn btn-ghost">Login</button>
    </div>
  </div>
</div>

<div class="navbar bg-base-100 border-b-2">
  <div class="navbar-start"></div>
  <div class="navbar-center">
    <div class="">
      <div class="flex gap-4 justify-center items-center">
        <a
          href="/"
          class="btn btn-ghost text-lg font-bold 
          {{#if (eq currentCategoryId -1)}}
            border-b-4 border-b-black
          {{/if}}"
        >
        Trang chá»§
        </a>
        {{#each categories}}
        <a
          href="/categories/{{ id }}"
          class="btn btn-ghost text-lg font-bold {{#if (or (eq id ../currentCategoryId) (hasSubCategorySelected subCategories ../currentCategoryId))}} border-b-4 border-b-black {{/if}}"
        >
          {{ category }}
        </a>
        {{/each}}
      </div>

        {{!-- <div class="border-t-2 border-gray-200 flex-1 w-full"></div> --}}

      {{#each categories}}
      {{#if (or (eq id ../currentCategoryId) (hasSubCategorySelected subCategories ../currentCategoryId))}}
      <div class="flex gap-4 justify-center items-center">
        {{#each subCategories}}
        <a
          href="/categories/{{ subId }}"
          class="btn btn-ghost text-base font-medium {{#if (eq subId ../../currentCategoryId)}} border-b-4 border-b-red-500 {{/if}}"
        >
          {{ name }}
        </a>
        {{/each}}
      </div>
      {{/if}}
      {{/each}}
    </div>
  </div>
  <div class="navbar-end"></div>
</div>
