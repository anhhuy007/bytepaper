{{!-- views/partials/article/base-article.hbs --}}
<div class="flex flex-col">
  <div class="relative group">
    <a href="/articles/{{ article.id }}" class="absolute inset-0"></a>

    <div class="grid grid-cols-1 bg-white overflow-hidden rounded-lg">
      {{!-- Thumbnail --}}
      <img
        src="{{ default article.thumbnail '/images/default-thumbnail.jpg' }}"
        alt="{{ default article.title 'Untitled Article' }}"
        class="w-full h-48 object-cover rounded-t-lg md:rounded-none md:rounded-l-lg transition-transform duration-300 group-hover:filter group-hover:brightness-75"
      />

      <div class="flex flex-col justif-around my-2">
        {{!-- Title --}}
        <div class="flex items-center text-lg mb-4">
          <a
            href="categories/{{ default article.category_id '#' }}"
            class="text-blue-500 hover:underline z-20"
          >
            {{ default article.category "Uncategorized" }}
          </a>
          {{!-- Premium Indicator --}} {{#if article.is_premium}}
          <span class="mx-2">|</span>

          <div class="w-24 premium-animation"></div>
          {{/if}} {{!-- Views --}}
        </div>
        <h2 class="text-xl font-bold leading-tight mb-3 group-hover:underline line-clamp-2">
          {{ default article.title "Untitled Article" }}
        </h2>

        {{!-- Abstract --}}
        <p class="text-gray-700 text-sm leading-relaxed mb-6 line-clamp-3">
          {{ default article.abstract "No summary available for this article." }}
        </p>

        <div class="flex items-center text-xs text-gray-500 font-bold">
          {{!-- Published Date --}}
          <div class="flex gap-1 items-center">
            <img src="/assets/calendar.svg" alt="Calendar Icon" class="h-3 w-3 fill-gray-500" />
            <span>{{ formatDate article.published_at }}</span>
          </div>
          <span class="mx-2">|</span>

          {{!-- Views --}}
          <div class="text-xs flex items-center gap-1">
            <img src="/assets/eye.svg" alt="Eye Scan Icon" class="h-3 w-3 fill-gray-500" />
            {{ default article.views 0 }} views
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="border"></div>
</div>
