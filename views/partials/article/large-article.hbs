<div class="flex flex-col gap-4">
  <div class="relative group">
    <a href="/articles/{{ article.id }}" class="absolute inset-0"></a>

    <div class="grid grid-cols-[33%_2%_65%]">
      <div class="py-12">
        <h2 class="text-2xl font-bold mb-4 group-hover:underline">{{ article.title }}</h2>
        <p class="text-gray-700 mb-6">{{ article.abstract }}</p>
        <div class="flex items-center text-gray-500 text-xs">
          <span>{{ formatDate article.publishedDate }}</span>
          <span class="mx-2">|</span>
          <a href="/categories/{{ article.categoryId }}" class="z-20 text-blue-500 hover:underline">
            {{ article.category }}
          </a>
        </div>
      </div>
      <div></div>

      <div>
        <img
          src="{{ article.thumbnailUrl }}"
          alt="{{ article.title }}"
          class="w-full h-70 aspect-[16/9] object-cover rounded-lg"
        />
      </div>
    </div>
  </div>
  <div class="border"></div>
</div>
