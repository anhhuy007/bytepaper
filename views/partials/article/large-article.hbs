{{!-- views/partials/article/large-article.hbs --}}
<div class="flex flex-col gap-4">
  <div class="relative group">
    <a href="/articles/{{ article.id }}" class="absolute inset-0"></a>

    <div class="grid grid-cols-[33%_2%_65%]">
      <div>
        {{!-- Title --}}
        <h2 class="text-2xl font-bold mb-4 group-hover:underline">
          {{ default article.title "Không có tiêu đề" }}
        </h2>

        {{!-- Abstract --}}
        <p class="text-gray-700 mb-6">{{ default article.abstract "Không có tóm tắt" }}</p>

        {{!-- Metadata --}}
        <div class="flex items-center text-gray-500 text-sm font-semibold">
          <span>{{ formatDate article.published_at }}</span>
          <span class="mx-2">|</span>
          <a href="categories/{{ default article.category_id '#' }}" class="z-10 text-blue-500 hover:underline">
            {{ default article.category "Không có thể loại" }}
          </a>
        </div>
      </div>
      <div></div>

      {{!-- Thumbnail --}}
      <div>
        <img src="{{ default article.thumbnail '/images/default-thumbnail.jpg' }}"
          alt="{{ default article.title 'Không có tiêu đề' }}"
          class="w-full h-70 aspect-[16/9] object-cover rounded-lg" />
      </div>
    </div>
  </div>
  <div class="border"></div>
</div>