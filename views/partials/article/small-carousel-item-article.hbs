{{!-- views/partials/article/small-article.hbs --}}
<div class="flex flex-col">
  <div class="relative grid grid-cols-[40%_2%_58%] group bg-white overflow-hidden">
    <a href="/articles/{{ article.id }}" class="absolute inset-0"></a>

    {{!-- Thumbnail --}}
    <div>
      <img
        src="{{ default article.thumbnail '/images/default-thumbnail.jpg' }}"
        alt="{{ default article.title 'Untitled Article' }}"
        class="w-full h-32 object-cover transition-transform duration-300 group-hover:filter group-hover:brightness-75"
      />
    </div>

    <div></div>

    <div class="space-y-4">
      {{!-- Metadata --}}
      <div class="flex items-center justify-between text-gray-500 text-xs">
        <span>{{ formatDate article.published_at }}</span>
        <a
          href="/categories/{{ default article.category_id '#' }}"
          class="z-20 text-blue-500 hover:underline"
        >
          {{ default article.category "Uncategorized" }}
        </a>
      </div>
      {{!-- Title --}}
      <h2 class="font-semibold leading-tight mb-2 group-hover:underline">
        {{ default article.title "Untitled Article" }}
      </h2>
      <div class="flex items-center gap-2">
        {{!-- Premium Indicator --}} {{#if article.is_premium}}
        <div class="badge badge-warning">Premium Article</div>
        {{/if}} {{!-- Views --}}
        <div class="text-gray-500 text-xs">{{ default article.views 0 }} views</div>
      </div>
    </div>
  </div>
  <div class="border"></div>
</div>
