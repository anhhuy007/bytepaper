{{!-- views/partials/article/small-carousel-item-article.hbs --}}
<div class="relative grid grid-cols-[40%_2%_58%] group bg-white overflow-hidden">
  <a href="/articles/{{ article.id }}" class="absolute inset-0"></a>

  {{!-- Thumbnail --}}
  <div>
    <img
      src="{{ default article.thumbnail '/images/default-thumbnail.jpg' }}"
      alt="{{ default article.title 'Untitled Article' }}"
      class="w-full h-32 object-cover transition-transform duration-300 group-hover:filter group-hover:brightness-75"
    />
  </div>

  <div></div>

  <div class="space-y-4">
    {{!-- Metadata --}}
    <div class="flex items-center justify-between text-gray-500 text-xs">
      <div class="flex gap-1 items-center">
        <img src="/assets/calendar.svg" alt="Calendar Icon" class="h-3 w-3 fill-gray-500" />
        <span>{{ formatDate article.published_at }}</span>
      </div>
      <a
        href="/categories/{{ default article.category_id '#' }}"
        class="bg-blue-100 text-blue-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded transition-all duration-300 ease-in-out hover:bg-blue-900 hover:text-white hover:scale-105 hover:shadow-md"
      >
        {{ default article.category "Uncategorized" }}
      </a>
    </div>
    {{!-- Title --}}
    <h2 class="font-semibold leading-tight mb-2 group-hover:underline">
      {{ default article.title "Untitled Article" }}
    </h2>
    <div class="flex justify-between items-center gap-2">
      <div class="text-gray-500 text-xs flex items-center gap-1">
        <img src="/assets/eye.svg" alt="Eye Scan Icon" class="h-3 w-3 fill-gray-500" />
        {{ default article.views 0 }} views
      </div>
      {{!-- Premium Indicator --}} {{#if article.is_premium}}
      <div class="w-16 premium-animation"></div>
      {{/if}} {{!-- Views --}}
    </div>
  </div>
</div>
