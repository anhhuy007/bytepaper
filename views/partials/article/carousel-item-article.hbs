<div class="relative group border-2">
  <a href="/articles/{{ article.id }}" class="absolute inset-0 z-10"></a>

  <div class="relative h-full">
    {{!-- Thumbnail --}}
    <img
      src="{{ default article.thumbnail '/images/default-thumbnail.jpg' }}"
      alt="{{ default article.title 'Untitled Article' }}"
      class="w-full h-full object-cover rounded-xl group-hover:opacity-95"
    />

    <div class="absolute inset-0 flex flex-col justify-end text-white bg-black bg-opacity-50 p-6">
      {{!-- Title --}}
      <h2 class="text-2xl font-extrabold group-hover:underline">
        {{ default article.title "Untitled Article" }}
      </h2>

      <p class="text-gray-300 mb-6 text-lg max-w-[70%] flex-shrink-0">
        {{ default article.abstract "No summary available for this article." }}
      </p>

      {{!-- Metadata --}}
      <div class="flex text-xs items-center">
        <div class="flex gap-2 items-center">
          <img src="/assets/calendar.svg" alt="Calendar Icon" class="h-4 w-4 bg-white" />
          <span>{{ formatDate article.published_at }}</span>
        </div>
        <span class="mx-2">|</span>
        <div class="flex items-center gap-2">
          <img src="/assets/eye.svg" alt="Eye Scan Icon" class="h-4 w-4 bg-white rounded-full" />
          <div class="">{{ default article.views 0 }} views</div>
        </div>
        <span class="mx-2">|</span>
        <a
          href="categories/{{ default article.category_id '#' }}"
          class="text-blue-500 hover:underline z-40"
        >
          {{ default article.category "Uncategorized" }}
        </a>

        {{!-- Premium Indicator --}} {{#if article.is_premium}}
        <span class="mx-2">|</span>

        <div class="w-16 premium-animation"></div>
        {{/if}} {{!-- Views --}}
      </div>
    </div>
  </div>
</div>
