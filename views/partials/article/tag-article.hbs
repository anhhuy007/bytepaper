{{!-- views/partials/article/tag-article.hbs --}}
<div class="flex flex-col gap-4">
  <div class="relative group">
    <a href="/articles/{{ article.id }}" class="absolute inset-0"></a>

    <div class="grid grid-cols-[10%_45%_10%_35%]">
      {{!-- Published Date --}}
      <span>{{ default formatDate article.published_at || "Not Published" }}</span>

      <div class="flex flex-col h-full">
        {{!-- Title --}}
        <h2 class="text-3xl font-bold mb-4 group-hover:underline">
          {{ default article.title "Untitled Article" }}
        </h2>

        {{!-- Abstract --}}
        <p class="text-gray-700 mb-6 text-xl">
          {{ default article.abstract "No summary available for this article." }}
        </p>

        {{!-- Tags --}}
        <div class="flex flex-wrap gap-2 mb-4 z-20">
          {{#if article.tags}} {{#each article.tags}}
          <a href="/tags/{{ this.id }}" class="btn-sm btn btn-outline text-xl">#{{ this.name }}</a>
          {{/each}} {{else}}
          <span class="text-gray-500 text-sm">No tags available.</span>
          {{/if}}
        </div>

        {{!-- Category --}}
        <a
          href="/categories/{{ article.category_id || '#' }}"
          class="text-blue-500 hover:underline text-xl z-20 mt-auto"
        >
          {{ default article.category "Uncategorized" }}
        </a>
      </div>

      <div></div>

      {{!-- Thumbnail --}}
      <div>
        <img
          src="{{ default article.thumbnail '/images/default-thumbnail.jpg' }}"
          alt="{{ default article.title 'Untitled Article' }}"
          class="w-full h-64 aspect-[16/9] object-cover rounded-lg"
        />
      </div>
    </div>
  </div>
  <div class="border"></div>
</div>
