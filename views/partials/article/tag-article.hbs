<div class="flex flex-col gap-4">
  <div class="relative group">
    <a href="/articles/{{ article.id }}" class="absolute inset-0"></a>

    <div class="grid grid-cols-[10%_45%_10%_35%]">
      <span>{{ formatDate article.publishedDate }}</span>
      <div class="flex flex-col h-full">
        <h2 class="text-3xl font-bold mb-4 group-hover:underline">{{ article.title }}</h2>
        <p class="text-gray-700 mb-6 text-xl">{{ article.abstract }}</p>

        <div class="flex flex-wrap gap-2 mb-4 z-20">
          {{#each tags}}
          <a href="/tags/{{ tagId }}" class="btn-sm btn btn-outline text-xl">#{{ name }}</a>
          {{/each}}
        </div>

        <a
          href="/categories/{{ article.categoryId }}"
          class="text-blue-500 hover:underline text-xl z-20 mt-auto"
        >
          {{ article.category }}
        </a>
      </div>

      <div></div>
      <div>
        <img
          src="{{ article.thumbnailUrl }}"
          alt="{{ article.title }}"
          class="w-full h-64 aspect-[16/9] object-cover rounded-lg"
        />
      </div>
    </div>
  </div>
  <div class="border"></div>
</div>
