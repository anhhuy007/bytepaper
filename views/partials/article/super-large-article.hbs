{{!-- views/partials/article/super-large-article.hbs --}}
<div class="relative group">
  <a href="/articles/{{ article.id }}" class="absolute inset-0"></a>

  <div class="grid grid-cols-[55%_2%_43%]">
    {{!-- Thumbnail --}}
    <div>
      <img src="{{ default article.thumbnail '/images/default-thumbnail.jpg' }}"
        alt="{{ default article.title 'Không có tiêu đề' }}"
        class="w-full h-96 aspect-[16/9] object-cover rounded-lg" />
    </div>
    <div></div>

    <div class="py-12">
      {{!-- Title --}}
      <h2 class="text-2xl font-bold mb-4 group-hover:underline">
        {{ default article.title "Không có tiêu đề" }}
      </h2>

      {{!-- Abstract --}}
      <p class="text-gray-700 mb-6">
        {{ default article.abstract "Không có tóm tắt" }}
      </p>

      {{!-- Metadata --}}
      <div class="flex items-center">
        <div class="flex gap-2 items-center">
          <img src="/assets/calendar.svg" alt="Calendar Icon" class="h-4 w-4 fill-gray-500" />
          <span class="text-gray-500">{{ formatDate published_at}}</span>
        </div>
        <span class="mx-2">|</span>
        <div class="flex items-center gap-2">
          <img src="/assets/eye.svg" alt="Eye Scan Icon" class="h-4 w-4 fill-gray-500" />
          <div class="text-gray-500">{{ default article.views 0 }} lượt xem</div>
        </div>
        <span class="mx-2">|</span>
        <a href="/articles/categories/{{ default article.category_id '#' }}"
          class="z-10 bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded transition-all duration-300 ease-in-out hover:bg-blue-900 hover:text-white hover:scale-105 hover:shadow-md">
          {{ default article.category "Không có thể loại" }}
        </a>
        {{!-- Premium Indicator --}} {{#if article.is_premium}}
        <span class="mx-2">|</span>

        <div class="w-24 premium-animation"></div>
        {{/if}}
      </div>
    </div>
  </div>
</div>