<section>
  <div class="container mx-auto shadow-xl p-5">
    <div class="mb-6 border-b border-gray-200">
      <div class="flex overflow-x-auto scrollbar-hide -mb-px" role="tablist">
        {{#each articles}} {{#if (lt @index 10)}}
        <button
          id="tab-{{@index}}"
          role="tab"
          aria-controls="tabpanel-{{@index}}"
          aria-selected="{{#if @first}}true{{else}}false{{/if}}"
          class="inline-flex items-center px-4 py-2 border-b-2 text-sm font-medium whitespace-nowrap transition-colors focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2
              {{#if @first}}
                border-orange-500 text-orange-500
              {{else}}
                border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300
              {{/if}}"
        >
          {{ default this.category 'Uncategorized' }}
        </button>
        {{/if}} {{/each}}
      </div>
    </div>

    {{#each articles}} {{#if (lt @index 10)}}
    <div
      id="tabpanel-{{@index}}"
      role="tabpanel"
      aria-labelledby="tab-{{@index}}"
      class="{{#unless @first}}hidden{{/unless}}"
    >
      {{> article/tab-item-article this}}
    </div>
    {{/if}} {{/each}}
  </div>
</section>

<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', (event) => {
    const tabs = document.querySelectorAll('[role="tab"]')
    const tabPanels = document.querySelectorAll('[role="tabpanel"]')

    tabs.forEach((tab) => {
      tab.addEventListener('click', changeTabs)
    })

    function changeTabs(e) {
      const target = e.target
      const parent = target.parentNode
      const tabPanelId = target.getAttribute('aria-controls')

      // Deactivate all tabs
      parent
        .querySelectorAll('[aria-selected="true"]')
        .forEach((t) => t.setAttribute('aria-selected', false))
      parent.querySelectorAll('.text-orange-500').forEach((t) => {
        t.classList.remove('border-orange-500', 'text-orange-500')
        t.classList.add('border-transparent', 'text-gray-500')
      })

      // Activate clicked tab
      target.setAttribute('aria-selected', true)
      target.classList.remove('border-transparent', 'text-gray-500')
      target.classList.add('border-orange-500', 'text-orange-500')

      // Hide all tab panels
      tabPanels.forEach((panel) => panel.classList.add('hidden'))

      // Show associated tab panel
      document.getElementById(tabPanelId).classList.remove('hidden')
    }
  })
</script>
