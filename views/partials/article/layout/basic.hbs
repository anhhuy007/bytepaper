{{!-- views/partials/article/layout/basic.hbs --}}
<div class="space-y-16">
  <div class="grid grid-cols-[69%_2%_29%]">
    <div class="space-y-8">
      {{!-- Render the first article as large --}}
      {{> article/large-article article=articles.[0]}}

      <div class="grid grid-cols-3 gap-4">
        {{!-- Render small articles for indices 1 to 3 --}}
        {{#each articles}} 
          {{#if (between @index 1 3)}}
          <div class="w-full">
            {{> article/small-article article=this}}
          </div>
          {{/if}} 
        {{/each}}
      </div>
    </div>
    <div></div>
    <div class="space-y-4">
      {{!-- Render base articles for indices 4 to 5 --}}
      {{#each articles}} 
        {{#if (between @index 4 5)}}
        <div class="w-full">
          {{> article/base-article article=this}}
        </div>
        {{/if}}
      {{/each}}
    </div>
  </div>

  <div class="grid grid-cols-4 gap-4 mt-8">
    {{!-- Render base articles for indices 6 to 10 --}}
    {{#each articles}} 
      {{#if (between @index 6 10)}}
      <div class="w-full">
        {{> article/base-article article=this}}
      </div>
      {{/if}}
    {{/each}}
  </div>
</div>

