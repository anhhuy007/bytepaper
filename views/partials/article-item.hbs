{{!-- views/partials/article-item.hbs --}}
<article class="flex bg-white shadow-lg rounded-lg overflow-hidden transition hover:shadow-xl">
  <!-- Text Content -->
  <div class="flex-grow p-6 space-y-4">
    <!-- Title -->
    <h2 class="text-2xl font-bold text-gray-800 hover:text-primary transition">
      <a href="/articles/{{id}}" class="hover:underline">{{title}}</a>
    </h2>
    <!-- Meta Info -->
    <p class="text-sm text-gray-500 flex items-center gap-4">
      {{#if category_name}}
      <a
        href="/articles/categories/{{category_id}}"
        class="link text-primary font-medium hover:underline flex items-center gap-1"
      >
        <i data-lucide="folder"></i> {{category_name}}
      </a>
      <span>|</span>
      {{/if}} {{formatDate published_at}}
    </p>
    <!-- Abstract -->
    <p class="text-gray-700 text-base line-clamp-3">{{abstract}}</p>

    <!-- Premium Indicator -->
    {{#if is_premium}}
    <span class="badge badge-primary flex items-center gap-2 text-sm text-white px-3 py-3">
      <i data-lucide="star"></i>
      <span>Premium</span>
    </span>
    {{/if}}
  </div>

  <!-- Thumbnail -->
  {{#if thumbnail}}
  <figure class="w-48 flex-shrink-0 overflow-hidden p-4">
    <a href="/articles/{{id}}" class="block">
      <img
        src="{{thumbnail}}"
        alt="{{title}}"
        class="object-cover w-full h-full rounded-lg shadow-md"
      />
    </a>
  </figure>
  {{/if}}
</article>
