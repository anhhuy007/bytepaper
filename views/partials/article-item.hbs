{{!-- views/partials/article-item.hbs --}}
<article class="card bg-white shadow-lg rounded-lg overflow-hidden transition hover:shadow-xl">
  {{#if thumbnail}} {{!--
  <figure class="w-full h-52 overflow-hidden">
    <a href="/articles/{{slug}}">
      <img src="{{thumbnail}}" alt="{{title}}" class="object-cover w-full h-full" />
    </a>
  </figure>
  --}} {{/if}}
  <div class="card-body p-6">
    <h2 class="card-title text-2xl font-bold text-gray-800 hover:text-primary transition">
      <a href="/articles/{{id}}" class="hover:underline">{{title}}</a>
    </h2>
    <p class="text-sm text-gray-500 mt-1">
      {{#if category}}
      <a href="/categories/{{category.id}}" class="link text-primary font-medium hover:underline">
        {{category.name}}
      </a>
      <span class="mx-2">|</span>
      {{/if}} {{formatDate published_at}}
    </p>
    <p class="mt-3 text-gray-700 text-base line-clamp-3">{{abstract}}</p>
    <div class="flex flex-wrap gap-2 mt-4">
      {{#each tags}}
      <a
        href="/tags/{{this}}"
        class="badge badge-primary badge-outline hover:bg-primary hover:text-white transition"
      >
        {{this}}
      </a>
      {{/each}}
    </div>
  </div>
</article>
