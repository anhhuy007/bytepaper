{{!-- views/users/extend-subscription.hbs --}}
<div class="container mx-auto px-4 md:px-8 lg:px-16 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold mb-6">Extend Subscription</h1>

    {{!-- Alert for Success Message --}} {{#if successMessage}}
    <div class="alert alert-success shadow-lg mb-4">
      <div>
        <svg class="h-6 w-6">
          <use href="#heroicon-o-check-circle"></use>
        </svg>
        <span>{{successMessage}}</span>
      </div>
    </div>
    {{/if}} {{!-- Alert for Error Message --}} {{#if errorMessage}}
    <div class="alert alert-error shadow-lg mb-4">
      <div>
        <svg class="h-6 w-6">
          <use href="#heroicon-o-exclamation-circle"></use>
        </svg>
        <span>{{errorMessage}}</span>
      </div>
    </div>
    {{/if}}

    <form action="/users/extend-subscription" method="POST" class="space-y-4">
      {{!-- Subscription Options --}}
      <div class="form-control">
        <label class="label">
          <span class="label-text">Select Subscription Plan</span>
        </label>
        <select name="planId" class="select select-bordered w-full" required>
          <option disabled selected>Select a plan</option>
          {{#each subscriptionOptions}}
          <option value="{{id}}">{{name}} - {{price}} USD - {{duration}} days</option>
          {{/each}}
        </select>
      </div>

      <button type="submit" class="btn btn-primary w-full">Extend Subscription</button>
    </form>
  </div>
</div>
