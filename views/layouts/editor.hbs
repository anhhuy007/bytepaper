<!DOCTYPE html>
<html lang="en" data-theme="emerald">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Article Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100">
    <!-- Navbar -->
    <nav class="bg-white shadow-md">
      <div class="container mx-auto px-4 py-3">
        <ul class="flex w-full m-0 p-0">
          <li class="flex-1 text-center">
            <a
              href="/editor/articles?status=draft"
              class="block text-xl font-bold py-4 px-4 hover:bg-black hover:text-white transition duration-200 w-full"
              >Draft</a
            >
          </li>
          <li class="flex-1 text-center">
            <a
              href="/editor/articles"
              class="block text-xl font-bold py-4 px-4 hover:bg-black hover:text-white transition duration-200 w-full"
              >Pending</a
            >
          </li>
          <li class="flex-1 text-center">
            <a
              href="/published"
              class="block text-xl font-bold py-4 px-4 hover:bg-black hover:text-white transition duration-200 w-full"
              >Published</a
            >
          </li>
          <li class="flex-1 text-center">
            <a
              href="/rejected"
              class="block text-xl font-bold py-4 px-4 hover:bg-black hover:text-white transition duration-200 w-full"
              >Rejected</a
            >
          </li>
          <li class="flex-1 text-center">
            <a
              href="/approved"
              class="block text-xl font-bold py-4 px-4 hover:bg-black hover:text-white transition duration-200 w-full"
              >Approved</a
            >
          </li>
          <li class="flex-1 text-center">
            <a
              href="/editor"
              class="block text-xl font-bold py-4 px-4 hover:bg-black hover:text-white transition duration-200 w-full bg-black text-white"
              >Overview</a
            >
          </li>
        </ul>
      </div>
    </nav>
    {{{body}}}

    <script>
      // Handle responsive menu toggle (if needed for mobile version)
      const menuToggle = document.getElementById('menu-toggle')
      const menuItems = document.getElementById('menu-items')

      menuToggle.addEventListener('click', () => {
        menuItems.classList.toggle('hidden')
      })

      // Highlight the active link
      const currentPath = window.location.pathname // Lấy đường dẫn hiện tại
      const links = document.querySelectorAll('nav a') // Lấy tất cả các thẻ a trong nav

      links.forEach((link) => {
        if (link.getAttribute('href') === currentPath) {
          link.classList.add('bg-black', 'text-white') // Thêm lớp cho mục đang được chọn
        }
      })
    </script>
  </body>
</html>
