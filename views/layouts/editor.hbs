{{!-- views/layouts/editor.hbs --}}
<!DOCTYPE html>
<html lang="en" data-theme="emerald">
  <head>
    <meta charset="utf-8" />
    <title>{{#if title}}{{title}} | {{/if}}Editor Panel - Paperly</title>
    <link rel="stylesheet" href="/output.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <div class="drawer drawer-mobile">
      <input id="editor-drawer" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content flex flex-col">
        {{> header}}
        <main class="flex-grow container mx-auto px-4 py-6">{{{body}}}</main>
        {{> footer}}
      </div>
      <div class="drawer-side">
        <label for="editor-drawer" class="drawer-overlay"></label>
        <aside class="w-64 bg-base-200">
          <div class="menu p-4">
            <h2 class="text-xl font-bold mb-4">Editor Menu</h2>
            <ul>
              <li><a href="/editor/dashboard" class="rounded">Dashboard</a></li>
              <li><a href="/editor/review-articles" class="rounded">Review Articles</a></li>
              <li><a href="/editor/profile" class="rounded">Profile</a></li>
            </ul>
          </div>
        </aside>
      </div>
    </div>
    <script src="/script.js"></script>
  </body>
</html>
