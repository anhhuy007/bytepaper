{{!-- views/layouts/admin.hbs --}}
<!DOCTYPE html>
<html lang="en" data-theme="emerald">
  <head>
    <meta charset="utf-8" />
    <title>{{#if title}}{{title}} | {{/if}}Admin Panel - Paperly</title>
    <link rel="stylesheet" href="/output.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Include Alpine.js -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

    <!-- Include Axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <div class="min-h-screen flex">
      <!-- Sidebar -->
      <aside class="w-1/4 bg-white shadow-lg">
        <div class="p-6">
          <h2 class="text-lg font-bold mb-4">Admin Dashboard</h2>
          <ul class="space-y-4">
            <li>
              <a href="/admin/dashboard" class="{{#ifActive 'admin/dashboard'}}active{{/ifActive}}"
                >Dashboard</a
              >
            </li>
            <li>
              <a href="/admin/users" class="{{#ifActive 'admin/users'}}active{{/ifActive}}"
                >Users</a
              >
            </li>
            <li>
              <a href="/admin/articles" class="{{#ifActive 'admin/articles'}}active{{/ifActive}}"
                >Articles</a
              >
            </li>
            <li>
              <a
                href="/admin/categories"
                class="{{#ifActive 'admin/categories'}}active{{/ifActive}}"
                >Categories</a
              >
            </li>
            <li>
              <a href="/admin/tags" class="{{#ifActive 'admin/tags'}}active{{/ifActive}}">Tags</a>
            </li>
            <li>
              <a href="/admin/editors" class="{{#ifActive 'admin/editors'}}active{{/ifActive}}"
                >Editors</a
              >
            </li>
          </ul>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-grow p-8 bg-gray-50">
        {{#if successMessage}}
        <div class="alert alert-success shadow-lg mb-4">{{successMessage}}</div>
        {{/if}} {{#if errorMessage}}
        <div class="alert alert-error shadow-lg mb-4">{{errorMessage}}</div>
        {{/if}} {{{body}}}
      </main>
    </div>
  </body>
</html>
