{{!-- views/layouts/writer.hbs --}}
<!DOCTYPE html>
<html lang="en" data-theme="emerald">
  <head>
    <meta charset="utf-8" />
    <title>{{#if title}}{{title}} | {{/if}}Writer Panel - Paperly</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/output.css" />
    <script src="https://unpkg.com/lucide@latest"></script>
  </head>
  <body class="bg-gray-100">
    <div class="min-h-screen flex">
      <!-- Sidebar -->
      <aside class="w-64 bg-white shadow-lg hidden md:block">
        <div class="p-6">
          <!-- Sidebar Title -->
          <h2 class="text-2xl font-bold flex items-center space-x-2 text-gray-800 mb-6">
            <i data-lucide="feather" class="text-primary"></i>
            <span>Writer Panel</span>
          </h2>

          <!-- Navigation Links -->
          <ul class="space-y-4">
            <li class="hover:bg-accent hover:text-white transition duration-300 rounded-lg">
              <a href="/" class="px-4 py-2 flex items-center space-x-2 text-gray-700">
                <i data-lucide="home"></i>
                <span>Back to Home</span>
              </a>
            </li>
            <li>
              <a
                href="/writer/articles"
                class="flex items-center space-x-2 px-4 py-2 rounded hover:bg-primary hover:text-white transition {{#ifActive 'writer/articles'}}bg-primary text-white font-semibold{{/ifActive}}"
              >
                <i data-lucide="file-text"></i>
                <span>My Articles</span>
              </a>
            </li>
            <li>
              <a
                href="/writer/articles/create"
                class="flex items-center space-x-2 px-4 py-2 rounded hover:bg-primary hover:text-white transition {{#ifActive 'writer/articles/create'}}bg-primary text-white font-semibold{{/ifActive}}"
              >
                <i data-lucide="plus-circle"></i>
                <span>Create Article</span>
              </a>
            </li>
            <li>
              <a
                href="/writer/articles/rejected"
                class="flex items-center space-x-2 px-4 py-2 rounded hover:bg-primary hover:text-white transition {{#ifActive 'writer/articles/create'}}bg-primary text-white font-semibold{{/ifActive}}"
              >
               <i data-lucide="x-circle"></i>
                <span>Rejected Articles</span>
              </a>
            </li>
            <li>
              <a
                href="/user/profile"
                class="flex items-center space-x-2 px-4 py-2 rounded hover:bg-primary hover:text-white transition {{#ifActive 'writer/profile'}}bg-primary text-white font-semibold{{/ifActive}}"
              >
                <i data-lucide="user"></i>
                <span>Profile</span>
              </a>
            </li>
          </ul>
        </div>
      </aside>

      <!-- Mobile Sidebar -->
      <aside
        x-data="{ open: false }"
        class="md:hidden bg-white shadow-lg fixed top-0 left-0 w-full z-50"
      >
        <div class="flex justify-between items-center p-4 bg-primary text-white">
          <button @click="open = !open" class="focus:outline-none">
            <i data-lucide="menu"></i>
          </button>
          <h2 class="text-lg font-bold">Writer Panel</h2>
        </div>
        <div x-show="open" @click.away="open = false" class="p-6 bg-base-200">
          <ul class="space-y-4">
            <li class="hover:bg-accent hover:text-white transition duration-300 rounded-lg">
              <a href="/" class="px-4 py-2 flex items-center space-x-2 text-gray-700">
                <i data-lucide="home"></i>
                <span>Back to Home</span>
              </a>
            </li>
            <li>
              <a
                href="/writer/articles"
                class="flex items-center space-x-2 px-4 py-2 rounded hover:bg-primary hover:text-white transition {{#ifActive 'writer/articles'}}bg-primary text-white font-semibold{{/ifActive}}"
              >
                <i data-lucide="file-text"></i>
                <span>My Articles</span>
              </a>
            </li>
            <li>
              <a
                href="/writer/articles/create"
                class="flex items-center space-x-2 px-4 py-2 rounded hover:bg-primary hover:text-white transition {{#ifActive 'writer/articles/create'}}bg-primary text-white font-semibold{{/ifActive}}"
              >
                <i data-lucide="plus-circle"></i>
                <span>Create Article</span>
              </a>
            </li>
            <li>
              <a
                href="/writer/profile"
                class="flex items-center space-x-2 px-4 py-2 rounded hover:bg-primary hover:text-white transition {{#ifActive 'writer/profile'}}bg-primary text-white font-semibold{{/ifActive}}"
              >
                <i data-lucide="user"></i>
                <span>Profile</span>
              </a>
            </li>
          </ul>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-grow p-8 bg-gray-50">
        {{#if successMessage}}
        <div class="alert alert-success shadow-lg mb-6 flex items-center space-x-2">
          <i data-lucide="check-circle" class="text-green-500"></i>
          <span>{{successMessage}}</span>
        </div>
        {{/if}} {{#if errorMessage}}
        <div class="alert alert-error shadow-lg mb-6 flex items-center space-x-2">
          <i data-lucide="alert-circle" class="text-red-500"></i>
          <span>{{errorMessage}}</span>
        </div>
        {{/if}} {{{body}}}
      </main>
    </div>

    <!-- Script -->
    <script>
      lucide.createIcons()
    </script>
  </body>
</html>
