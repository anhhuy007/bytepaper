{{!-- views/errors/error.hbs --}}
<div class="min-h-screen w-full p-4 flex items-center justify-center">
  <div class="max-w-lg w-full">
    <div class="bg-white shadow-lg rounded-lg p-8 text-center">
      <div class="mb-6">
        <svg class="mx-auto h-12 w-12 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
        <h2 class="mt-4 text-2xl font-bold text-gray-900">Error {{statusCode}}</h2>
        <p class="mt-2 text-gray-600">{{message}}</p>
      </div>
      
      <div class="mt-6 space-y-3">
        <button onclick="history.back()" class="w-full px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 rounded-md">
          Go Back
        </button>
        <a href="/" class="block w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md">
          Return Home
        </a>
      </div>
    </div>
  </div>
</div>