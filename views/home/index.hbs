{{!-- views/home/index.hbs --}}
<div class="space-y-28 px-24">
  {{!-- Featured Articles Carousel --}}
  <section class="space-y-10">
    <div>
      <h1 class="text-3xl font-bold space-y-10">Featured Articles</h1>
      <div class="w-full h-[1px] bg-black"></div>
    </div>
    {{> article/layout/carousel articles=featuredArticles}}
  </section>

  {{!-- Most Viewed Articles --}}
  <section class="space-y-10">
    <div>
      <h1 class="text-3xl font-bold space-y-10">Most Viewed Articles</h1>
      <div class="w-full h-[1px] bg-black"></div>
    </div>
    {{> article/layout/basic articles=mostViewedArticles}}
  </section>

  {{!-- Latest Articles --}}
  <section class="space-y-10">{{> article/layout/latest articles=newestArticles}}</section>

  {{!-- Top Categories --}}
  <section class="space-y-10">
    <div>
      <h1 class="text-3xl font-bold space-y-10">Top Categories</h1>
      <div class="w-full h-[1px] bg-black"></div>
    </div>
    {{> article/layout/tab articles=topCategoryArticles}}
  </section>
</div>
