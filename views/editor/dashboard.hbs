



<div class="bg-gray-100 min-h-screen flex items-center justify-center">
    <div class="container mx-auto px-4">
      <!-- Dashboard Section -->
      <h1 class="text-3xl font-bold mb-6 text-center">Editor Dashboard</h1>
      
      <div id="status-cards" class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-6">
        <!-- Cards will be dynamically generated here -->
      </div>
      
      <!-- Button to redirect -->
      <div class="text-center mt-6">
        <button
          id="view-articles"
          class="px-6 py-3 bg-blue-500 text-white font-semibold rounded hover:bg-blue-600"
        >
          View All Articles
        </button>
      </div>
    </div>

    <script>
      // Data for article statuses
      const articleCounts = {
        draft: 12,
        pending: 8,
        published: 25,
        rejected: 4,
        approved: 16,
      };

      // Function to generate status cards
      function generateStatusCards() {
        const statusContainer = document.getElementById("status-cards");

        Object.keys(articleCounts).forEach((status) => {
          // Create card for each status
          const card = document.createElement("div");
          card.className =
            "bg-white shadow-md rounded p-4 text-center border border-gray-200";

          card.innerHTML = `
            <h2 class="text-xl font-semibold capitalize">${status}</h2>
            <p class="text-2xl font-bold text-blue-500 mt-2">${articleCounts[status]}</p>
          `;

          statusContainer.appendChild(card);
        });
      }

      // Event listener for the "View All Articles" button
      document.getElementById("view-articles").addEventListener("click", () => {
        window.location.href = "/articles/";
      });

      // Generate cards when the page loads
      document.addEventListener("DOMContentLoaded", generateStatusCards);
    </script>
  </div>