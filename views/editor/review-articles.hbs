{{!-- views/editor/review-articles.hbs --}}
{{#extend "layouts/editor"}}

  {{#content "title"}}Review Articles{{/content}}

  {{#content "body"}}
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-3xl font-bold mb-6">Articles Pending Review</h1>

      {{!-- Filter Form --}}
      <form method="GET" class="flex items-center space-x-4 mb-6">
        <div class="form-control">
          <label class="label">Category</label>
          <select name="category" class="select select-bordered">
            <option value="">All</option>
            {{#each categories}}
              <option value="{{this.id}}" {{#if (eq ../selectedCategory this.id)}}selected{{/if}}>{{this.name}}</option>
            {{/each}}
          </select>
        </div>
        <button type="submit" class="btn btn-primary mt-6">Filter</button>
      </form>

      {{!-- Articles Table --}}
      <div class="overflow-x-auto">
        <table class="table w-full">
          <thead>
            <tr>
              <th>Title</th>
              <th>Author</th>
              <th>Category</th>
              <th>Submitted At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each articles}}
              <tr>
                <td>{{this.title}}</td>
                <td>{{this.author.fullName}}</td>
                <td>{{this.category.name}}</td>
                <td>{{formatDate this.createdAt}}</td>
                <td>
                  <a href="/editor/articles/{{this.id}}" class="btn btn-xs btn-info">View</a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

      {{!-- Pagination (if needed) --}}
      {{!-- Include pagination partial if you have pagination implemented --}}
      <!-- {{> pagination currentPage=currentPage totalPages=totalPages}} -->
    </div>
  {{/content}}

{{/extend}}
