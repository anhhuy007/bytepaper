<div class="container mx-auto p-8 bg-white rounded-lg shadow-lg">
  <!-- Page Title -->
  <div class="mb-6 flex justify-between items-center">
    <h1 class="text-4xl font-bold text-gray-800 flex items-center space-x-2">
      <i data-lucide="x-circle" class="text-red-500"></i>
      <span>Từ chối bài viết</span> <!-- Reject Article -->
    </h1>

    <!-- Back Button -->
    <a href="/editor/articles/{{article.id}}" class="btn btn-secondary flex items-center space-x-2">
      <i data-lucide="arrow-left"></i>
      <span>Quay lại</span> <!-- Back -->
    </a>
  </div>

  <!-- Reject Form -->
  <form action="/editor/articles/{{article.id}}/reject" method="POST" class="space-y-6">
    <!-- Title (Read-Only) -->
    <div class="form-control">
      <label class="label text-lg font-semibold text-gray-700 flex items-center space-x-2">
        <i data-lucide="type"></i>
        <span>Tiêu đề</span> <!-- Title -->
      </label>
      <input type="text" class="input input-bordered w-full bg-gray-100" value="{{article.title}}" disabled />
    </div>

    <!-- Abstract (Read-Only) -->
    <div class="form-control">
      <label class="label text-lg font-semibold text-gray-700 flex items-center space-x-2">
        <i data-lucide="align-left"></i>
        <span>Tóm tắt</span> <!-- Abstract -->
      </label>
      <textarea class="textarea textarea-bordered w-full bg-gray-100" disabled>
{{article.abstract}}</textarea>
    </div>

    <!-- Rejection Reason -->
    <div class="form-control">
      <label class="label text-lg font-semibold text-gray-700 flex items-center space-x-2">
        <i data-lucide="alert-triangle"></i>
        <span>Lý do từ chối</span> <!-- Rejection Reason -->
      </label>
      <textarea name="rejection_reason" id="rejection_reason" class="textarea textarea-bordered w-full"
        placeholder="Cung cấp lý do từ chối" required></textarea>
    </div>

    <!-- Action Buttons -->
    <div class="flex justify-end space-x-4">
      <!-- Reject Button -->
      <button type="submit" class="btn btn-error flex items-center space-x-2">
        <i data-lucide="x-circle"></i>
        <span>Từ chối</span> <!-- Reject -->
      </button>
    </div>
  </form>
</div>