{{!-- views/auth/forgot-password.hbs --}}

<div class="min-h-screen flex items-center justify-center bg-base-200">
  <div class="w-full max-w-md">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-center text-2xl font-bold">Forgot Password</h2>

        {{!-- Alert for Success or Errors --}}
        <div id="alert" class="hidden alert alert-error mt-4 shadow-lg">
          <div>
            <!-- Icon: Error Alert -->
            <span id="alert-message">Error or success message</span>
          </div>
        </div>

        <form
          id="forgot-password-form"
          action="/auth/forgot-password"
          method="POST"
          class="space-y-4"
        >
          {{!-- Email Input --}}
          <div class="form-control">
            <label class="label">
              <span class="label-text">Email</span>
            </label>
            <input
              type="email"
              name="email"
              placeholder="Enter your email"
              class="input input-bordered"
              required
            />
          </div>

          {{!-- Submit Button --}}
          <div class="form-control">
            <button type="submit" class="btn btn-primary w-full">Send Reset OTP</button>
          </div>
        </form>

        <p class="text-center mt-4">
          Remembered your password?
          <a href="/auth/login" class="text-primary hover:underline">Login</a>
        </p>
      </div>
    </div>
  </div>
</div>
