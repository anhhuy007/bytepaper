{{!-- views/user/profile.hbs --}}
<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
  {{#if successMessage}}
  <div class="alert alert-success shadow-lg mb-6">{{successMessage}}</div>
  {{/if}}

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
    <!-- Profile Details -->
    <div class="card bg-white shadow-xl rounded-lg hover:shadow-2xl transition-shadow duration-300">
      <div class="card-body">
        <h2 class="card-title text-2xl sm:text-3xl font-bold text-gray-800">
          {{default user.full_name 'Full name not found'}}
        </h2>
        <p class="text-sm text-gray-600 mt-4 space-y-2">
          <span class="block">
            <strong class="font-semibold">Username:</strong> {{default user.username 'Username not
            found'}}
          </span>
          <span class="block">
            <strong class="font-semibold">Email:</strong> {{default user.email 'Email not found'}}
          </span>
          <span class="block">
            <strong class="font-semibold">Pen Name:</strong> {{default user.pen_name 'Pen name not
            found'}}
          </span>
          <span class="block">
            <strong class="font-semibold">Date of Birth:</strong> {{formatDate user.date_of_birth}}
          </span>
          <span class="block">
            <strong class="font-semibold">Role:</strong> {{capitalize user.role}}
          </span>
          <span class="block">
            <strong class="font-semibold">Subscription:</strong>
            {{#if subscription}}
            <span class="badge badge-success"
              >Valid until {{formatDate subscription.expiry_date}}</span
            >
            {{else}}
            <span class="badge badge-secondary">No active subscription</span>
            {{/if}}
          </span>
        </p>
        <div class="mt-6">
          <a
            href="/user/edit-profile"
            class="btn btn-primary w-full sm:w-auto text-sm font-semibold"
          >
            Edit Profile
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
