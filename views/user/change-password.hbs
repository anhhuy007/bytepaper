<h1 class="text-2xl font-bold mb-6">Change Password</h1>
<form id="changePasswordForm" action="/user/change-password" method="POST" class="space-y-4">
  <div class="form-control">
    <label class="label">Current Password</label>
    <input type="password" name="currentPassword" class="input input-bordered w-full" required />
  </div>
  <div class="form-control">
    <label class="label">New Password</label>
    <input
      id="newPassword"
      type="password"
      name="newPassword"
      class="input input-bordered w-full"
      required
    />
  </div>
  <div class="form-control">
    <label class="label">Confirm New Password</label>
    <input id="confirmPassword" type="password" class="input input-bordered w-full" required />
  </div>
  <button type="submit" class="btn btn-primary w-full">Change Password</button>
</form>

<script>
  document.getElementById('changePasswordForm').addEventListener('submit', function (e) {
    const newPassword = document.getElementById('newPassword').value
    const confirmPassword = document.getElementById('confirmPassword').value

    if (newPassword !== confirmPassword) {
      e.preventDefault()
      alert('Passwords do not match!')
    }
  })
</script>
