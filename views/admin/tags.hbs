{{!-- views/admin/tags.hbs --}}
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Tags Management</h1>
    <a href="/admin/tags/add" class="btn btn-primary">Add Tag</a>
  </div>

  <!-- Tags Table -->
  <div class="overflow-x-auto">
    <table class="table w-full">
      <thead>
        <tr>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each tags}}
        <tr>
          <td>{{this.name}}</td>
          <td>
            <a href="/admin/tags/edit/{{this.id}}" class="btn btn-xs btn-warning">Edit</a>
            <form
              action="/admin/tags/delete/{{this.id}}"
              method="POST"
              style="display: inline"
              onsubmit="return confirm('Are you sure you want to delete this tag?');"
            >
              <button type="submit" class="btn btn-xs btn-error">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
