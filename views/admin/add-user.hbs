{{!-- views/admin/add-user.hbs --}}
<div class="container mx-auto px-4 py-8">
  <!-- Page Header -->
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-4xl font-extrabold text-gray-800">Add New User</h1>
    <a href="/admin/users" class="btn btn-secondary">Back to Users</a>
  </div>

  <!-- Success/Error Messages -->
  <div id="responseMessage" class="hidden"></div>

  <!-- User Form -->
  <form id="addUserForm" class="bg-white p-6 rounded-lg shadow-lg space-y-6">
    <!-- Username -->
    <div>
      <label class="block text-sm font-medium text-gray-600 mb-2">Username</label>
      <input
        type="text"
        name="username"
        class="input input-bordered w-full"
        placeholder="Enter username"
        required
      />
    </div>

    <!-- Password -->
    <div>
      <label class="block text-sm font-medium text-gray-600 mb-2">Password</label>
      <input
        type="password"
        name="password"
        class="input input-bordered w-full"
        placeholder="Enter password"
        required
      />
    </div>

    <!-- Email -->
    <div>
      <label class="block text-sm font-medium text-gray-600 mb-2">Email</label>
      <input
        type="email"
        name="email"
        class="input input-bordered w-full"
        placeholder="Enter email"
        required
      />
    </div>

    <!-- Full Name -->
    <div>
      <label class="block text-sm font-medium text-gray-600 mb-2">Full Name</label>
      <input
        type="text"
        name="full_name"
        class="input input-bordered w-full"
        placeholder="Enter full name"
        required
      />
    </div>

    <!-- Pen Name -->
    <div>
      <label class="block text-sm font-medium text-gray-600 mb-2">Pen Name (Optional)</label>
      <input
        type="text"
        name="pen_name"
        class="input input-bordered w-full"
        placeholder="Enter pen name"
      />
    </div>

    <!-- Date of Birth -->
    <div>
      <label class="block text-sm font-medium text-gray-600 mb-2">Date of Birth (Optional)</label>
      <input type="date" name="date_of_birth" class="input input-bordered w-full" />
    </div>

    <!-- Role -->
    <div>
      <label class="block text-sm font-medium text-gray-600 mb-2">Role</label>
      <select name="role" class="select select-bordered w-full" required>
        {{#each roles}}
        <option value="{{this}}">{{capitalize this}}</option>
        {{/each}}
      </select>
    </div>

    <!-- Submit and Back Buttons -->
    <div class="flex justify-end space-x-4">
      <a href="/admin/users" class="btn btn-secondary">Cancel</a>
      <button type="submit" class="btn btn-primary">Add User</button>
    </div>
  </form>
</div>

<script>
  const form = document.getElementById('addUserForm');
  const responseMessage = document.getElementById('responseMessage');

  form.addEventListener('submit', async (event) => {
    event.preventDefault(); // Prevent default form submission
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());

    try {
      const response = await axios.post('/admin/users/add', data);
      responseMessage.className = 'alert alert-success shadow-lg mt-4';
      responseMessage.textContent = 'User added successfully! Redirecting to users page...';
      responseMessage.hidden = false;
      form.reset(); // Clear the form

      setTimeout(() => {
        window.location.href = '/admin/users';
      }, 2000);
    } catch (error) {
      responseMessage.className = 'alert alert-error shadow-lg mt-4';
      responseMessage.textContent = error.response?.data?.message || 'Failed to add user.';
      responseMessage.hidden = false;
    }
  });
</script>
