{{!-- views/admin/editors.hbs --}}
<div class="container mx-auto px-4 py-8">
  <!-- Page Header -->
  <div class="mb-6 flex justify-between items-center">
    <h1 class="text-3xl font-bold flex items-center space-x-2">
      <i data-lucide="users" class="text-blue-500"></i>
      <span>Editors Management</span>
    </h1>
  </div>

  <!-- Editors Table -->
  <div class="overflow-x-auto bg-white shadow-md rounded-lg">
    <table class="table w-full border border-gray-300">
      <thead class="bg-gray-200 text-gray-700">
        <tr>
          <th class="py-3 px-4">Name</th>
          <th class="py-3 px-4">Email</th>
          <th class="py-3 px-4 text-center">Assigned Categories</th>
          <th class="py-3 px-4 text-center">Actions</th>
        </tr>
      </thead>
      <tbody class="text-gray-600">
        {{#each editors}}
        <tr class="hover:bg-gray-100">
          <td class="py-3 px-4">{{this.full_name}}</td>
          <td class="py-3 px-4">{{this.email}}</td>
          <td class="py-3 px-4 text-center">
            <span class="bg-blue-100 text-blue-600 font-bold px-2 py-1 rounded-full">
              {{this.assignedCategories.length}} {{#if
              this.assignedCategories.length}}Categories{{else}}Category{{/if}}
            </span>
          </td>
          <td class="py-3 px-4 text-center">
            <a
              href="/admin/editors/{{this.id}}/categories"
              class="btn btn-sm btn-primary flex items-center justify-center space-x-2 hover:shadow-md"
              title="Manage categories for {{this.full_name}}"
            >
              <i data-lucide="edit"></i>
              <span>Manage Categories</span>
            </a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
