{{!-- views/articles/detail.hbs --}}
<div class="container mx-auto px-4 md:px-8 lg:px-16 py-8">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    {{!-- Main Content --}}
    <div class="lg:col-span-2 space-y-8">
      {{!-- Article Card --}}
      <article class="card bg-base-100 shadow-xl">
        {{#if article.thumbnail}}
        <figure>
          <img
            src="{{article.thumbnail}}"
            alt="{{default article.title 'Article Thumbnail'}}"
            class="w-full h-64 object-cover"
          />
        </figure>
        {{/if}}
        <div class="card-body">
          <h1 class="card-title text-3xl font-bold">
            {{default article.title 'Untitled Article'}}
          </h1>
          <p class="text-sm text-gray-500 mb-4">
            {{#if article.category}}
            <a href="/categories/{{article.category.id}}" class="link">
              {{article.category.name}}
            </a>
            <span class="mx-2">|</span>
            {{/if}} {{formatDate article.published_at}}
          </p>
          <div class="flex flex-wrap gap-2 mb-4">
            {{#each article.tags as |tag|}}
            <a href="filter?tagId={{tag.id}}" class="badge badge-outline">#{{tag.name}}</a>
            {{/each}}
          </div>
          <div class="prose max-w-none">{{{default article.content 'No content available.'}}}</div>
        </div>
      </article>

      {{!-- Comments Section --}}
      <section id="comments" class="space-y-6">
        <h2 class="text-2xl font-bold">Comments</h2>

        {{#if user}} {{!-- Comment Form --}}
        <form
          id="comment-form"
          action="/articles/{{article.id}}/comments"
          method="POST"
          class="space-y-4"
        >
          <div class="form-control">
            <label class="label">
              <span class="label-text">Your Comment</span>
            </label>
            <textarea
              name="content"
              class="textarea textarea-bordered w-full"
              placeholder="Write your comment here..."
              required
            ></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit Comment</button>
        </form>
        {{else}}
        <p>
          <a href="/auth/login" class="link">Login</a> or
          <a href="/auth/register" class="link">Register</a> to post a comment.
        </p>
        {{/if}} {{!-- Comments List --}}
        <div class="space-y-4">
          {{#each comments}} {{> comment-item this}} {{else}}
          <p class="text-gray-500">No comments yet. Be the first to comment!</p>
          {{/each}}
        </div>
      </section>
    </div>

    {{!-- Sidebar --}}
    <aside class="space-y-8">
      {{!-- Related Articles --}}
      <section>
        <h2 class="text-xl font-bold mb-4">Related Articles</h2>
        <div class="space-y-4">
          {{#each relatedArticles}} {{> article-item this}} {{else}}
          <p class="text-gray-500">No related articles available.</p>
          {{/each}}
        </div>
      </section>
    </aside>
  </div>
</div>

<script>
  document.getElementById('comment-form')?.addEventListener('submit', async function (e) {
    e.preventDefault()
    const form = e.target
    const content = form.content.value.trim()

    if (!content) {
      alert('Comment content cannot be empty.')
      return
    }

    try {
      const response = await axios.post(`/api/v1/comments`, {
        articleId: '{{article.id}}',
        content: content,
      })

      // Clear the textarea
      form.content.value = ''

      // Prepend the new comment to the comments list
      const newCommentHtml = response.data.commentHtml
      const commentsSection = document.querySelector('#comments .space-y-4')
      commentsSection.insertAdjacentHTML('afterbegin', newCommentHtml)
    } catch (error) {
      console.error('Error submitting comment:', error)
      alert('An error occurred while submitting your comment.')
    }
  })
</script>
