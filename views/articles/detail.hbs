{{!-- views/articles/detail.hbs --}}
<div class="container mx-auto p-4">
  <div class="card w-full bg-base-100 shadow-xl">
    <figure>
      <img src="{{ news.thumbnail }}" alt="News Thumbnail" class="w-full h-64 object-cover" />
    </figure>
    <div class="card-body">
      <h2 class="card-title text-3xl">{{ news.title }}</h2>
      <p class="text-sm text-gray-500 mb-4">{{ news.date }}</p>
      <div class="flex flex-wrap gap-2 mb-4">
        {{#each news.tags}}
        <span class="badge badge-primary">{{ this }}</span>
        {{/each}}
      </div>
      <p>{{ news.content }}</p>
    </div>
  </div>
  <a href="/" class="btn btn-primary mt-4">Back to Home</a>
</div>
