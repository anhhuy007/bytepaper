{{!-- articles/list.hbs --}}
<div class="container mx-auto px-4 md:px-8 lg:px-16 py-8">
  <!-- Dynamic Title -->
  <h1 class="text-3xl md:text-4xl font-extrabold text-gray-800 mb-12 flex items-center space-x-3">
    <i data-lucide="layers"></i>
    <span>{{title}}</span>
  </h1>

  <!-- Articles Section -->
  <div class="space-y-6">
    {{#if articles.length}} {{#each articles}} {{> article-item article=this}} {{/each}} {{else}}
    <p class="text-center text-gray-500">No articles found.</p>
    {{/if}}
  </div>

  <!-- Pagination -->
  {{> pagination currentPage=currentPage totalPages=totalPages query=query}}
</div>
