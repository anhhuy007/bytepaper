{{!-- articles/list.hbs --}}
<div class="container mx-auto px-4 md:px-8 lg:px-16 py-8">
  <!-- Dynamic Title -->
  <h1 class="text-4xl font-extrabold text-gray-800 mb-6 text-center">
    {{#if title}}{{title}}{{else}}Articles{{/if}}
  </h1>

  <!-- Articles List -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {{#if articles.length}} {{#each articles}} {{> article-item article=this}} {{/each}} {{else}}
    <p class="text-center text-gray-500 col-span-full">No articles found.</p>
    {{/if}}
  </div>

  <!-- Pagination -->
  <div class="mt-8 flex justify-center">
    {{> pagination currentPage=currentPage totalPages=totalPages query=query}}
  </div>
</div>
