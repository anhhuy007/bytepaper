{{!-- views/writer/rejected-articles.hbs --}}
<div class="container mx-auto p-8 bg-white rounded-lg shadow-lg">
  <!-- Page Title -->
  <h1 class="text-4xl font-bold text-gray-800 flex items-center space-x-2 mb-6">
    <i data-lucide="alert-circle" class="text-error"></i>
    <span>Rejected Articles</span>
  </h1>

  <!-- Articles Table -->
  <div class="overflow-x-auto">
    <table class="table w-full border-collapse border border-gray-300">
      <thead class="bg-gray-100 text-gray-700">
        <tr>
          <th class="py-3 px-4 text-left">Title</th>
          <th class="py-3 px-4 text-left">Reason</th>
          <th class="py-3 px-4 text-left">Rejected At</th>
          <th class="py-3 px-4 text-center">Actions</th>
        </tr>
      </thead>
      <tbody class="text-gray-600">
        {{#if articles.length}} {{#each articles}}
        <tr class="hover:bg-gray-50">
          <td class="py-2 px-4">{{this.title}}</td>
          <td class="py-2 px-4">{{this.reason}}</td>
          <td class="py-2 px-4">{{formatDate this.rejected_at}}</td>
          <td class="py-2 px-4 flex justify-center">
            <a
              href="/writer/articles/edit/{{this.article_id}}"
              class="btn btn-warning flex items-center space-x-2"
            >
              <i data-lucide="edit"></i>
              <span>Edit</span>
            </a>
          </td>
        </tr>
        {{/each}} {{else}}
        <tr>
          <td colspan="4" class="py-4 text-center text-gray-500">No rejected articles found.</td>
        </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
</div>
