{{!-- views/writer/article-rejections.hbs --}}
<div class="container mx-auto p-8 bg-white rounded-lg shadow-lg">
  <!-- Page Title -->
  <div class="mb-6 flex justify-between items-center">
    <h1 class="text-4xl font-bold text-gray-800 flex items-center space-x-2">
      <i data-lucide="alert-circle" class="text-error"></i>
      <span>Article Rejections</span>
    </h1>

    <!-- Back Button -->
    <a
      href="/writer/articles/edit/{{articleId}}"
      class="btn btn-secondary flex items-center space-x-2"
    >
      <i data-lucide="arrow-left"></i>
      <span>Back to Edit</span>
    </a>
  </div>

  <!-- Rejections Table -->
  <div class="overflow-x-auto">
    <table class="table w-full border-collapse border border-gray-300">
      <thead class="bg-gray-100 text-gray-700">
        <tr>
          <th class="py-3 px-4 text-left">Reason</th>
          <th class="py-3 px-4 text-left">Rejected At</th>
        </tr>
      </thead>
      <tbody class="text-gray-600">
        {{#if rejections.length}} {{#each rejections}}
        <tr class="hover:bg-gray-50">
          <td class="py-2 px-4">{{this.reason}}</td>
          <td class="py-2 px-4">{{formatDate this.rejected_at}}</td>
        </tr>
        {{/each}} {{else}}
        <tr>
          <td colspan="2" class="py-4 text-center text-gray-500">
            No rejections found for this article.
          </td>
        </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
</div>
